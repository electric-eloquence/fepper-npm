{
  "name": "fepper",
  "description": "A Front End Prototyper tool for rapid prototyping of web sites",
  "main": "core/fepper.js",
  "bin": {
    "fepper": "index.js"
  },
  "scripts": {
    "test:eslint:extend": "eslint excludes/profiles/base/extend/**/*.js excludes/profiles/main/extend/**/*.js",
    "test:eslint:fepper": "eslint core/**/*.js",
    "test:eslint:tasker": "eslint tasker/**/*.js",
    "test:eslint:root": "eslint *.js",
    "test:eslint:test": "eslint test && eslint ui/test",
    "test:eslint:ui": "eslint ui/**/*.js",
    "test:eslint": "npm run test:eslint:extend && npm run test:eslint:fepper && npm run test:eslint:tasker && npm run test:eslint:root && npm run test:eslint:test && npm run test:eslint:ui",
    "test:mocha:core": "mocha test/tests/*.js",
    "test:mocha:ui": "mocha ui/test/tests/*.js",
    "test:mocha": "npm run test:mocha:core && npm run test:mocha:ui",
    "test": "npm run test:eslint && npm run test:mocha"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/electric-eloquence/fepper-npm.git"
  },
  "keywords": [
    "atomic",
    "component",
    "design",
    "end",
    "fepper",
    "front",
    "front-end",
    "frontend",
    "lab",
    "library",
    "pattern",
    "prototype",
    "prototyper",
    "prototyping",
    "template"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/electric-eloquence/fepper-npm/issues"
  },
  "homepage": "http://fepper.io/",
  "engines": {
    "node": ">=8.10.0"
  },
  "dependencies": {
    "body-parser": "^1.6.3",
    "cookie-parser": "^1.4.3",
    "diveSync": "^0.3.0",
    "express": "^4.16.3",
    "feplet": "*",
    "fs-extra": "^7.0.1",
    "gray-matter": "^3.1.1",
    "gulp-livereload": "^4.0.1",
    "he": "1.1.0",
    "html2json": "^1.0.2",
    "js-beautify": "1.9.0",
    "js-yaml": "^3.12.1",
    "json5": "0.5.1",
    "marked": "^0.6.1",
    "opn": "^5.4.0",
    "rcloader": "^0.2.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "request": "^2.40.0",
    "require-dir": "^0.3.2",
    "slash": "^2.0.0"
  },
  "devDependencies": {
    "chai": "4.x",
    "eslint": "5.x",
    "fepper-ui": "*",
    "fepper-utils": "*",
    "husky": "1.x",
    "json-eval": "*",
    "mocha": "6.x"
  }
}
