/* Headings */
/*Further Reading: http:/csswizardry.com/2012/02/pragmatic-practical-font-sizing-in-css/ */
h1, .alpha
  line-height: 1.2
  @media all and (max-width: $bp-sm-max)
    font-size: 2.8rem
h2, .beta
  line-height: 1.2
h3, .gamma
  line-height: 1.2
/* Subheadings */
.subheading
  font-family: $font-secondary
  font-weight: normal
