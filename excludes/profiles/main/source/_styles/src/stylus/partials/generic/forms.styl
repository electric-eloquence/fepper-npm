/*------------------------------------*
    $FORMS
*------------------------------------*/
form > div
  margin-bottom: $space
form ol, form ul
  list-style: none
  margin-left: 0
fieldset
  border: 0
  padding: 0
  margin: 0
label
  display: block
  padding-bottom: $space-quarter
button, input, select, textarea
  font-family: inherit
  font-size: 100%
  margin: 0
input, textarea
  border: 1px solid $gray
  padding: $pad-half 1.04rem
input[type="text"], input[type="email"], input[type="password"], input[type="url"], input[type="number"]
  width: 25.5rem
textarea
  width: 30.4rem
input[type="text"], input[type="search"], input[type="url"], input[type="number"], textarea
  -webkit-appearance: none
button, input[type="submit"]
  padding: $pad-half
  background: $gray-dark
  border: 1px solid $gray
  color: $white
  cursor: pointer
input[type="checkbox"],
input[type="radio"]
  width: auto
  margin-right: 0.3em
input[type="search"]
  -webkit-appearance: none
  border-radius: 0
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration
  -webkit-appearance: none
.field-container
  margin-bottom: $space
.inline-form
  fieldset, .inline-container
    position: relative
.inline-search-results-form
  width: 100%
  @media all and (min-width: $bp-med)
    width: 82%
  fieldset, .inline-container
    position: relative
  input[type="submit"], button
    position: absolute
    top: 0
    right: 0
    z-index: 1
    width: auto
/* Validation */
.has-error
  border-color: $error
.is-valid
  border-color: $valid
/*------------------------------------*
    $SPECIFIC FORMS
*------------------------------------*/
/* Search Form */
.search-form
  fieldset
    float: left
.search-field,
.search-submit
  height: 3.6rem
.search-field
  width: 18.4rem
  @media all and (max-width: $bp-sm-max)
    float: right
.inline-form .search-submit
  background: none
  border: 1px solid $gray
  border-left: 0
  color: $black
  width: 4.9rem
  &:hover
    background: rgba(0, 0, 0, 0.3)
  @media all and (max-width: $bp-sm-max)
    height: 3.6rem
