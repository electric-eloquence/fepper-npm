// Block
.block
  overflow: hidden
  .headline
    margin-top: 0
  p:last-child
    margin-bottom: 0
// Block Hero
.block-hero
  margin-bottom: $space-half
  .b-thumb
    img
      display: block
  @media all and (max-width: $bp-xs-max)
    .b-text
      display: flex
      flex-direction: column
      justify-content: center
      height: 8.7rem
  @media all and (max-width: $bp-sm-max)
    .b-text
      background: $dimmer
      overflow: hidden
    .headline
      margin-bottom: 0
      padding: 0 $space-half
  @media all and (min-width: $bp-small) and (max-width: $bp-sm-max)
    .b-thumb
      padding-top: 75%
    img
      position: absolute
      top: 0
      left: 0
    .b-text
      overflow: hidden
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      padding-top: 19%
    .headline
      position: absolute
      top: 50%
      left: 0
      transform: translateY(-50%);
  @media all and (min-width: $bp-med)
    position: relative
    width: 100%
    .b-text
      background: $dim
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      padding: $space-and-half
// Block Sub
.block-sub
  position: relative
  margin-bottom: $space-half
  position: relative
  .headline
    font-size: 1.8rem
  .b-thumb
    position: relative
    z-index: 0
    img
      display: block
  .b-text
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    background: $dim
    padding: $space-half
  @media all and (min-width: $bp-med)
    padding-top: $space-half
    width: "calc(%s - (%s / 3))" % ($column-width-narrow $space-double)
// Block Hoagie
.block-hoagie
  width: 100%
  border-collapse: collapse
  .b-inner
    display: block
    overflow: hidden
  .headline
    @media all and (max-width: $bp-sm-max)
      font-size: 1.7rem
      padding-top: 0
    @media all and (min-width: $bp-small)
      float: right
      padding: 0 $space
      width: $column-width-wide
  .b-thumb
    float: left
    @media all and (max-width: $bp-xs-max)
      display: flex
      align-items: center
      justify-content: center
      float: none
    @media all and (min-width: $bp-small)
      width: $column-width-narrow
    img
      @media all and (max-width: $bp-xs-max)
        max-width: 22.5rem
  .b-text
    float: right
    p:first-of-type
      margin-top: 0
    @media all and (min-width: $bp-small)
      width: $column-width-wide
      padding: 0 $space
// Block Hero and Subs
.block-hero,
.block-sub
  .inner
    display: block
    position: relative
  .b-text
    color: $white
  @media all and (min-width: $bp-small) and (max-width: $bp-sm-max)
    width: calc(50% - 0.4rem)
  @media all and (max-width: $bp-sm-max)
    .headline
      font-size: 1.7rem
      line-height: 1.1
