// Two Column Layout
.l-two-col
  @extend .cf
  .l-main
    @media all and (min-width: $bp-med)
      float: left
      padding-right: $space
      width: $column-width-two-thirds
    @media all and (min-width: $bp-large)
      width: $column-width-three-quarters
  .l-sidebar
    @media all and (max-width: $bp-sm-max)
      clear: both
    @media all and (min-width: $bp-med)
      float: left
      width: $column-width-one-third
      padding: 0 0 0 $space
    @media all and (min-width: $bp-large)
      width: $column-width-one-quarter
[role="main"]
  @extend .lc
  @extend .cf
  padding: $space-half
  overflow: hidden
// Hero and Subs
.hero-and-subs
  border-bottom: 1px solid $gray-light-2
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  margin-bottom: 1em
  padding-bottom: 1.5em
// Hero, Subs, Dagwood, Sidebar
.hero-and-subs,
.dagwood,
.l-sidebar
  @media all and (max-width: $bp-xs-max)
    h2
      text-align: center
