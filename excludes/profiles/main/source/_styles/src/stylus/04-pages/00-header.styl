.header
  background: $white
  border-bottom: 1px solid $gray-light-3
  padding: 0
  @extend .lc
  @media all and (max-width: $bp-sm-max)
      margin: 0 0 0 $space-half
      width: "calc(100% - %s)" % $space-half
  @media all and (min-width: $bp-med) and (max-width: $max-width)
      width: "calc(100% - %s)" % $space
  @media all and (min-width: $max-width)
      width: "calc(%s - %s)" % ($max-width $space)
.logo
  float: left
  margin: 0.65rem 0
  @media all and (max-width: $bp-sm-max)
    img
      height: 3.7rem
.nav-toggle
  background: $white-translucent
  color: $gray-dark
  float: right
  padding: 1.4rem 1.5rem
  font-size: 2.08rem
  line-height: 1
  border: 0
  border-left: 1px solid $gray-light-3
  width: 5.1rem
  height: 5rem
  outline: 0
  &:hover
    color: $gray
  @media all and (min-width: $bp-med)
    display: none
.search-form
  background: $white-translucent
  overflow: hidden
  margin: 0.65rem 0 0
  max-height: 0
  @media all and (max-width: $bp-sm-max)
    margin: 0.1rem 0 0
    position: absolute
    top: 5rem
    right: 0
    z-index: 2
    &.active
      max-height: 100%
  @media all and (min-width: $bp-med)
    float: right
    max-height: none
