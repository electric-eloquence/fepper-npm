/*------------------------------------*
    $FOOTER
*------------------------------------*/
.footer
  clear: both
  overflow: hidden
  background: $gray-dark-2
  color: $white
  line-height: 1.2
  height: $footer-height
  padding-top: $pad-half
  position: absolute
  bottom: 0
  left: 0
  width: 100%
  a
    color: $gray-light
.copyright
  margin-bottom: 0
  @media all and (min-width: $bp-med)
    float: right
